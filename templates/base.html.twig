<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MyVisionBoard{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/slate/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>
        {% include 'layout/header.html.twig' %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-dismissible alert-success d-flex align-items-center justify-content-center h-40" style="user-select: auto;">
                <strong style="user-select: auto;">{{ message }}</strong>
            </div>
        {% endfor %}

        {# <section>
           <header class="container h-100">
                <div class="d-flex align-items-center justify-content-center h-100"> #}
                    {% block body %}{% endblock %}
                {# </div>
            </header> 
        </section>#}

        {% include 'layout/footer.html.twig' %}

        {% block javascripts %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    </body>
</html>
